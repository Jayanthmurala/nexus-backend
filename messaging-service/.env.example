# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nexus_messaging"

# Server Configuration
PORT=4006
HOST=0.0.0.0
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Socket.IO Configuration
SOCKET_PORT=3001
SOCKET_CORS_ORIGIN="http://localhost:3000"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain"

# Redis Configuration (for Socket.IO scaling)
REDIS_URL="redis://localhost:6379"
